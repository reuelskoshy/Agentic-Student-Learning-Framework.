# Student Learning Framework Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
# Embedding model to use for vectorization
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Document chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Ollama base URL (default: localhost)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# RETRIEVAL CONFIGURATION
# =============================================================================
# Number of documents to retrieve for context
TOP_K_DOCUMENTS=4

# Distance threshold for FAISS similarity search (lower = more strict)
DISTANCE_THRESHOLD=1.2

# MMR diversity factor (0-1, higher = more diverse results)
MMR_DIVERSITY_FACTOR=0.7

# Search method: similarity, mmr, smart, detailed
SEARCH_METHOD=smart

# =============================================================================
# UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API server host
API_HOST=127.0.0.1

# API server port
API_PORT=8005

# Number of API workers
API_WORKERS=1

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# API key for authentication (optional)
API_KEY=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development mode
DEBUG=false
